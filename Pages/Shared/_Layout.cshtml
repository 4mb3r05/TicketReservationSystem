<!DOCTYPE html>
<html lang="en">
<head>

    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Railify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketReservationSystem.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&family=Roboto+Mono&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">TicketReservationSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
</head>
<body>
    
    
    <div class="container">
        <main role="main" class="pb-3">
            
            @RenderBody()

            @if (ViewBag.IsHomePage != null && (bool)ViewBag.IsHomePage)
                { 
                    <div class="text-center">
                <h1 class="display-4">Your Train Tickets and Timetables All In One Place</h1>
                <p id="p1">
                    Discover the ease of travel with our Ticket Reservation System. Effortlessly book train tickets and explore schedules in a user-friendly interface. Whether you're a frequent traveler or planning a one-time trip, our platform ensures a seamless and efficient booking process. Welcome to a new era of hassle-free rail journey planning!
                </p>
                <div id="searchboxes">
                    <form action="/search" method="get">
                        <label for="from">From Station or City:</label>
                        <input type="text" id="from" name="from" placeholder="Enter origin" required>
                        <button type="submit">Search</button>
                    </form>

                    <form action="/search" method="get">
                        <label for="to">To Station or City:</label>
                        <input type="text" id="to" name="to" placeholder="Enter destination" required>
                        <button type="submit">Search</button>
                    </form>
                    <button id="getTicketsBtn">Get Tickets</button>


                    <script>
                     $(function () {
                       var availableStations = [
                       "London Paddington",
                        "Manchester Piccadilly",
                        "Birmingham New Street",
                        "Liverpool Lime Street",
                        "Leeds",
                        "Newcastle",
                        "Bristol Temple Meads",
                        "Edinburgh Waverley",
                        "Glasgow Central",
                        "Sheffield",
                        "Oxford",
                        "Cambridge",
                        "Cardiff Central",
                        "Nottingham",
                        "York",
                        "Southampton Central",
                        "Aberdeen",
                        "Brighton",
                        "Exeter St Davids",
                        "Dundee",
                        "Plymouth",
                        "Swansea",
                        "Inverness",
                        "Portsmouth Harbour",
                        "Stirling",
                        "Luton",
                        "Reading",
                        "Canterbury West",
                        "Belfast Central",
                        "Carlisle",
                        "Dover Priory",
                        "Hull",
                        "Blackpool North",
                        "Milton Keynes Central",
                        "Aberystwyth",
                        "Worcester Foregate Street",
                        "Bradford Interchange",
                        "Lancaster",
                        "Truro",
                        "Wolverhampton",
                        "Norwich",
                        "Dumfries",
                        "Chester",
                        "Salisbury",
                        "Derry/Londonderry",
                        "Harrogate",
                        "Leicester"
                        ];

                      $("#fromStation, #toStation").autocomplete({
                       source: availableStations
                      });
                    });

                    $("#searchButton").on("click", function () {
                     var fromStation = $("#fromStation").val();
                     var toStation = $("#toStation").val();

                      if (fromStation && toStation) {
                       window.location.href = "/timetable?from=" + fromStation + "&to=" + toStation;
                       } else {
                        alert("Please select both From and To stations.");
                        }
                      });
                    </script>
                </div>

            </div>
                }
        
            
        </main>
    </div>

    <div class="light-pink-div">
                    <div class="points">
                        <div class="point">
                            <img src="piggy-bank.png" alt="piggy-bank">
                            <p>Compare cheap prices for train and bus tickets</p>
                        </div>
                        <div class="point">
                            <img src="earth-europa.png" alt="globe">
                            <p>Travel thousands of destinations in and across 45 countries</p>
                        </div>
                        <div class="point">
                            <img src="transporter.png" alt="people">
                            <p>Join millions of people who use us every day</p>
                        </div>
                        <div class="point">
                            <img src="laugh-beam.png" alt="customer">
                            <p>Customer service on hand every step of the way</p>
                        </div>
                    </div>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    
</body>

<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TicketReservationSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
</footer>
</html>