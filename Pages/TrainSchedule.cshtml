@model List<TrainSchedule>
    
@{
    Layout = "_Layout"; 
}

<!-- HTML and Razor code to display the list -->
<!DOCTYPE html>
<html>
<head>
    <title>Train Schedules</title>
</head>
<body>
    <h1>Train Schedules</h1>

    <table>
        <thead>
            <tr>
                <th>Train Number</th>
                <th>Departure Station</th>
                <th>Arrival Station</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)
            {
                <tr>
                    <td>@schedule.TrainNumber</td>
                    <td>@schedule.DepartureStation</td>
                    <td>@schedule.ArrivalStation</td>
                    <td>@schedule.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@schedule.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@schedule.Price</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
